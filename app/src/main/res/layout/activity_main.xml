<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    tools:context="com.example.som.blocky4.MainActivity">

    <TextView
        android:id="@+id/Title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOCKY"
        android:textColor="@color/black"
        android:textSize="100dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"></TextView>

    <Button
        android:id="@+id/btn_NewGame"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="?attr/actionModeSplitBackground"
        android:text="New Game"
        android:textColor="@color/WHITE"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="260dp"></Button>

    <Button
        android:id="@+id/btn_LoadGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/actionModeSplitBackground"
        android:text="Load Game"
        android:textColor="@color/WHITE"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="310dp"
        android:layout_below="@+id/btn_NewGame"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="13dp"></Button>

    <Button
        android:id="@+id/btn_Tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/actionModeSplitBackground"
        android:text="Tutorial"
        android:textColor="@color/WHITE"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="360dp"
        android:layout_below="@+id/btn_LoadGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"></Button>

</RelativeLayout>
